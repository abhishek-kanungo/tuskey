

<div class="bg-grey-lighter min-h-screen flex flex-col">
            <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
                <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
                    <h1 class="mb-8 text-3xl text-center">Sign up</h1>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Email" %>

                 

                    
    <%= f.password_field :password, autocomplete: "new-password", class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Password min 6 characters" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Coonfirm password" %>

                   
    <%= f.submit "Sign up" , class: "w-full text-indigo-600 focus:ring-indigo-500 border-gray-300 text-center py-3  focus:outline-none my-5" %>

          <% end %>    
                    
                </div>

                
            </div>
        </div>

