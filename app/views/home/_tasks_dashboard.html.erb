<div class=" flex items-center px-4">
<%= link_to 'Create Task', new_tasks_path, class: " items-center bg-purple-600 p-2 rounded-lg text-white " %>

    <div class='overflow-x-auto w-full'>

        <!-- Table -->
        <table class='mx-auto max-w-7xl w-full table-fixed  rounded-lg bg-white divide-y divide-gray-300 overflow-hidden'>
            <thead class="bg-gray-50">
                <tr class="text-gray-600 text-left">
                    <th class="w-1/5 font-semibold text-sm uppercase px-6 py-4">
                        Title
                    </th>
                    <th class="w-2/5f ont-semibold text-sm uppercase px-6 py-4">
                        Description
                    </th>
                    <th class="w-1/5 font-semibold text-sm uppercase px-6 py-4 text-center">
                        State
                    </th>
                    <th class="w-1/5 font-semibold text-sm uppercase px-6 py-4 text-center">
                        Timeline
                    </th>
                    <th class="font-semibold text-sm uppercase px-6 py-4">
                        
                    </th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            <% @tasks.each do |task| %>
                <tr>
                    <td class="px-6 py-4">
                        <div class="flex items-center space-x-3">
                            <div class="inline-flex w-5 h-10 ">
                                <img class='w-10 h-10 object-cover rounded-full' alt='User avatar' src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS4pMGnz_duH7p7rtFRj2BwLkVQeCSk0HN33g&usqp=CAU'>
                            </div>
                            <div>
                                <p class="">
                                    <%= task.title%>
                                </p>
                                <p class="text-gray-500 text-sm font-semibold tracking-wide">
                                    
                                </p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 overflow-clip ">
                        <p class="">
<%= task.description %>                        </p>
                        
                    </td>
                    <td class="px-6 py-4 text-center">
                        <span class="text-green-800 bg-green-200 font-semibold px-2 rounded-full">
                            <%= Task::STATE_HASH.key(task.state) %>
                        </span>
                    </td>
                    <td class="px-6 py-4 text-center">
                                                    <%= local_timezone(task.begins_at) %> - <%= local_timezone(task.deadline) %>

                    </td>
                    <td class="px-6 py-4 text-center">
                    <%= link_to "Update State", edit_tasks_path(id: task.id), remote: true, class: "text-purple-800 hover:underline" %>
                    
                        
                    </td>
                </tr>
                            <% end %>

            </tbody>
        </table>

    </div>
</div>




<div id="demo-form" class="demo-description" style="display: none; ">
 <div id="modal-body">
 </div>
 </div>













